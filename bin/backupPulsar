#!/bin/bash
#
# Making the photos backup
#
##########################
[ "$1" = "-h" ] && echo -e "Usage:\nbackupPulsar.sh <extra rsync args>" && exit 1

echo -e "\nBacking up German pictures..."
###### Config ########
SOURCE="/home/paulo/imagens/Alemanha"
DEST="/l/home/machado/nobackup"
HOST="pulsar"
ARGS=" -rv --size-only $1"


###### Cmd #########
rsync  ${ARGS}  ${SOURCE}  ${HOST}:${DEST} 
[ $? == 0 ] && echo -e "\nAll done"


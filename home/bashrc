# /etc/skel/.bashrc
#
# This file is sourced by all *interactive* bash shells on startup,
# including some apparently interactive shells such as scp and rcp
# that can't tolerate any output.  So make sure this doesn't display
# anything or bad things will happen !


# Test for an interactive shell.  There is no need to set anything
# past this point for scp and rcp, and it's important to refrain from
# outputting anything in those cases.
if [[ $- != *i* ]] ; then
	# Shell is non-interactive.  Be done now!
	return
fi

#PS1='\[\033[01;33m\]\u \[\033[01;37m\]@\[\033[01;37m\]\h\[\033[01;36m\] \w \$\[\033[00m\] '
PS1='\[\e[01;33m\]\u \[\e[01;37m\]@\[\e[01;37m\]\h\[\e[01;36m\] \w $\[\e[00m\] '
#PS1='\u@\h \w $ '

HISTFILESIZE='5000'
HISTCONTROL='ignoreboth'

[[ -f /etc/bash_completion ]] && source /etc/bash_completion

# Put your fun stuff here.
#alias ssh='ssh -Y'
alias tree='tree -A'
alias toff='synclient TouchpadOff=1'
alias ton='synclient TouchpadOff=0'
alias vi='vi -p'
alias bi='vi'
alias ls='ls --color=auto --group-directories-first'
alias grep='grep --color=auto -i'
alias diff='diff -urN'
alias serial-out='screen /dev/ttyUSB0 9600'
alias ll='ls -l'
alias la='ls -a'
alias dos2unix='dos2unix -A'
alias lh='ls -d .??*'
#alias feh='display'
alias git='LANG=en_US.UTF-8 git'
alias pkill='pkill -ec'
alias octave='clear; octave --no-gui --quiet'
alias gource="gource --user-image-dir $HOME/.avatar"
alias ps='ps ux'
export VISUAL="vim"
alias cat='bat'
alias bonzo='echo "Bonzo on $(based-connect -b 28:11:A5:35:B8:18)%"'


alias psql_local='psql postgres://postgres@localhost'
alias pgcli_local='pgcli postgres://postgres@localhost'

PATH="/home/paulo/bin:/usr/local/sbin:/usr/sbin:/sbin:${PATH}"
#XSESSION="fluxbox"
PYTHONSTARTUP=$HOME/.pythonrc
#export PYTHONSTARTUP
WINEARCH=win32

OPENSCADPATH="$HOME/.local/share/OpenSCAD/libraries"

export WORKON_HOME=$HOME/.virtualenvs
source /usr/bin/virtualenvwrapper.sh
source /usr/share/fzf/key-bindings.bash

#eval $(docker-machine env suse-docker)

